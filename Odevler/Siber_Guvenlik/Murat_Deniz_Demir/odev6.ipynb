def print_tablo(tablo):
    for satir in tablo:
        print(satir)

def satir_toplam(tablo):
    for satir in tablo:
        print(f"Satır toplamı: {sum(satir)}")

def sutun_toplam(tablo):
    for i in range(len(tablo[0])):
        sutun_toplam = 0
        for satir in tablo:
            sutun_toplam += satir[i]
        print(f"Sütun toplamı: {sutun_toplam}")

