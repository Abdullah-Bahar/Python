def ekok_ebob_bul(n1, n2):
    def ebob_bul(a, b):
        while b:
            a, b = b, a % b
        return a

    def ekok_bul(a, b):
        return a * b // ebob_bul(a, b)

    ekok = ekok_bul(n1, n2)
    ebob = ebob_bul(n1, n2)

    if ekok == 1 and ebob == 1:
        return "Yok", "Yok"
    else:
        return ekok, ebob

n1 = 12
n2 = 18
sonuc = ekok_ebob_bul(n1, n2)
print(f"{n1} ve {n2} için EKOK ve EBOB:", sonuc)
