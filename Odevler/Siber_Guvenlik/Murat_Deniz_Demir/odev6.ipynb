def gizle(sözcük_tablosu, dize):
    for sözcük in sözcük_tablosu:
        dize = dize.replace(sözcük, '*' * len(sözcük))
    return dize

tablo = ["sivas", "deniz", "bir"]
gizlenmis_dize = gizle(tablo, "Sivas güzel bir memleket.")
print("Gizlenmiş Dize:", gizlenmis_dize)

